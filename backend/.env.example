PORT=5001
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

NODE_ENV=development
SERVER_ENV=production

# Security Configuration
ADMIN_API_KEY=your_secure_api_key_here_change_in_production
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000,http://localhost:5173

# Email Configuration (Outlook/Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

ADMIN_EMAIL=admin@yourdomain.com

# DeepL Translation API (Optional)
DEEPL_API_KEY=your-deepl-api-key

# Twilio SMS Configuration (Optional)
# Get your credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Admin Phone Number for SMS reminders (E.164 format)
ADMIN_PHONE_NUMBER=+1234567890
